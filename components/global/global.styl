html
  font-size 10px
  color rgba(0,0,0,.87)
  @media screen and (min-width: 600px)
    font-size 10.5px

  @media screen and (min-width: 900px)
    font-size 11px

body
  font-family "Roboto", sans-serif
  font-size 1.4rem

*
  border 0
  margin 0
  padding 0
  vertical-align baseline

*
*:before
*:after
  box-sizing inherit
  font-size inherit
  font-family inherit
